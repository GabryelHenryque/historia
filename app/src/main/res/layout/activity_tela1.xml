<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela1"
    android:background="@drawable/fundob2"
    android:backgroundTint="#311C1C39"
    android:backgroundTintMode="src_atop">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logosemfundo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@drawable/fundo"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#0A000000"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BirBatata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fbotao1"
                android:backgroundTint="#2AFFFFFF"
                android:backgroundTintMode="src_in"
                android:elevation="4dp"
                android:text="historia batata"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>